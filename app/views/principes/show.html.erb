<% title @principe.name %>

<h2>Classes d'interaction</h2>
<p>
  <% if @principe.classes.empty? %>
    pas d'interactions répertoriées
  <% else %>
    <% @principe.classes.each do |classe| %>
      <% if classe.name == @principe.name %>
        <%= link_to "Interactions en propre", classe_path(classe) %>
        <% if @principe.classes.count == 1 %>
          uniquement
        <% else %>
          mais voir aussi :
        <% end %>
      <% else %>
        <%= link_to h(classe.name), classe_path(classe) %>
      <% end %>
    <% end %>
  <% end %>
</p>
<p><%= link_to "Modifier", edit_principe_path(@principe) %></p>
<p><%= button_to 'Détruire', @principe, :confirm => 'Êtes-vous sûr?', :method => :delete %></p>
<p><%= link_to "Retourner à la liste", principes_path %></p>
